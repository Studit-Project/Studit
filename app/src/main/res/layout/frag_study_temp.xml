<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="@color/bottom_bar"
        android:textStyle="bold"
        android:text="스터디 관리 하는 법! 소개~" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="스터디는 크게 내가 만든 스터디랑 다른 사람이 만든 스터디가 있습니다!
\n그래서 내가 만든 스터디라면 스터디를 삭제할수도, 스터디원을 강퇴 시킬 수도 있습니다.
\n내가 참여한 스터디는 내가 직접 나가거나 정보를 볼 수 있습니다." />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="21sp"
        android:layout_gravity="center"
        android:textColor="@color/purple_500"
        android:text="즐거운 스터디 관리 하세요~" />

    <Button
        android:id="@+id/home_btn_study"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="30sp"
        android:backgroundTint="@color/bottom_bar"
        android:text="참여하는 스터디 목록 보기!"
        android:textSize="20dp" />
</LinearLayout>